  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "outDir": "./dist" 
  },
  "include": [
    "src/**/*.ts" 
  ],
  "exclude": [
    "node_modules"
  ]
}